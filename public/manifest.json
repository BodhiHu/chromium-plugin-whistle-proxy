{
  "name": "whistle rules plugin By Nick",
  "version": "1.2",
  "manifest_version": 2,
  "description": "whistle 代理规则管理第三方插件",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Whistle 规则管理",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "proxy",
    "storage",
    "tabs"
  ]
}